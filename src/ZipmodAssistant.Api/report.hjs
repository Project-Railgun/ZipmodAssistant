<!DOCTYPE html>
<html>
<head>
  <title>ZipmodAssistant Report - {{CurrentDate}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style>
    * {
      margin: 0;
      padding: 0;
    }

    #search-bar {
      margin: 16px 0;
    }

    .report-container {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
    }
    
    .report-container tr {
      border-bottom: 1px solid black;
    }

    .report-container td {
      padding: 4px 8px;
    }
  </style>
</head>
<body>
  <div class="report-container">
    <h3>Session {{SessionId}} - Date {{CurrentDate}}</h3>
    <input id="search-bar" type="text" placeholder="Search" onkeydown="doSearch()" onchange="doSearch()" />
    <table>
      <thead>
        <tr>
          <th>Filename</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        {{#Entries}}
        <tr data-filename="{{Filename}}" data-type="{{Type}}">
          <td>
            {{Filename}}
          </td>
          <td>
            {{Type}}
          </td>
        </tr>
        {{/Entries}}
      </tbody>
    </table>
  </div>
  <script>
    const searchBar = document.getElementById('search-bar');
    const elms = document.getElementsByTagName('tr');

    function doSearch() {
      if (searchBar.value.length === 0) {
        for (const item of elms) {
          item.hidden = false;
        }
      } else {
        for (const item of elms) {
          if (!item.dataset.filename) {
            continue;
          }
          item.hidden = !item.dataset.filename.includes(searchBar.value) && !item.dataset.type.includes(searchBar.value);
        }
      }
    }
  </script>
</body>
</html>